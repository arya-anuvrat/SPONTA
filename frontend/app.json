{
    "expo": {
        "name": "SPONTA",
        "slug": "sponta",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.sponta.app",
            "buildNumber": "1",
            "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "SPONTA needs your location to show nearby challenges and events.",
                "NSLocationAlwaysAndWhenInUseUsageDescription": "SPONTA needs your location to show nearby challenges and events.",
                "NSCameraUsageDescription": "SPONTA needs camera access to let you share photos during challenges.",
                "NSPhotoLibraryUsageDescription": "SPONTA needs photo library access to let you share photos during challenges.",
                "NSPhotoLibraryAddUsageDescription": "SPONTA needs permission to save photos you take during challenges.",
                "UIBackgroundModes": [
                    "location",
                    "fetch",
                    "remote-notification"
                ],
                "CFBundleURLTypes": [
                    {
                        "CFBundleURLSchemes": ["sponta"]
                    }
                ]
            },
            "config": {
                "googleMapsApiKey": "AIzaSyDVG5-dn0osOOm94tOvQC7V5BiGKiFgDGI"
            }
        },
        "plugins": [
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow SPONTA to use your location."
                }
            ],
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow SPONTA to access your camera."
                }
            ],
            [
                "expo-notifications",
                {
                    "color": "#ffffff"
                }
            ],
            [
                "react-native-maps",
                {
                    "googleMapsApiKey": "AIzaSyDVG5-dn0osOOm94tOvQC7V5BiGKiFgDGI"
                }
            ]
        ],
        "scheme": "sponta"
    }
}

